<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title </th>
            <th>Description</th>
            <th>Extra Information</th>
            <th>Created_at</th>
            <th>Updated_at</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %> 
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= article.extra_information %></td>
            <td><%= article.created_at %></td>
            <td><%= article.updated_at %></td>
            <td> Placeholder </td>
        </tr>
    </tbody>
    <% end %>
</table>